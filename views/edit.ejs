<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Games</h1>
        <div class="col-6 offset-3">
            <form action="/games/<%= g._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div>
                    <label class="form-label" for="aa">Edit Game Title</label>
                    <input class="form-control mb-0" type="text" id="aa" name="games[title]" value="<%= g.title %>"
                        required>
                    <div class="invalid-feedback ">
                        Please provide a valid Game Image Title.
                    </div>
                    <div class="valid-feedback">
                        Nice.
                    </div>
                </div>

                <div>
                    <label class="form-label" for="bb">Edit Game Description</label>
                    <textarea class="form-control" id="bb" name="games[description]"
                        required><%= g.description %></textarea>
                    <div class="invalid-feedback ">
                        Please provide a valid Game Description.
                    </div>
                    <div class="valid-feedback">
                        Nice.
                    </div>
                </div>
                <div>
                    <label class="form-label" for="cc">Edit Game Images</label><br>
                    <div class="input-group">
                        <input type="file" class="form-control" id="cc" name="image"
                            aria-describedby="inputGroupFileAddon04" aria-label="Upload" multiple>
                    </div>
                </div>
                <div class="mb-3">
                    <h5> Delete Images </h5>
                    <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                        <% g.image.forEach((image, i)=> { %>
                            <div class="col">
                                <div class="card">
                                    <img class="card-img" src="<%= image.thumbnail %>" alt="" crossorigin="anonymous">
                                    <div class="card-img-overlay text-end pt-1 pe-2">
                                        <label class="visually-hidden" for="image-<%= i %>">Delete Image</label>
                                        <input class="form-check-input" type="checkbox" name="deleteImages[]"
                                            value="<%= image.filename %>" id="image-<%= i %>">
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <div class="">
                    <button class="btn btn-success">UPDATE</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/games/<%= g._id %>">Back</a>